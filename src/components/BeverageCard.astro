---
interface Props {
  imageSrc: string;
  title: string;
  description: string;
  link: string;
}

const { imageSrc, title, description, link } = Astro.props;
---

<a
  href={link}
  class="group block rounded-lg overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-xl border border-greyish"
>
  <div class="relative">
    <img src={imageSrc} alt={title} class="w-full h-64 object-cover" />
    <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-70"></div>
  </div>
  <div class="p-6 relative">
    <h3 class="text-2xl font-bold mb-3 text-gold">{title}</h3>
    <p class="text-white mb-4">{description}</p>
    <div class="flex items-center justify-between text-gold">
      <span class="font-bold">BUY</span>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transform transition-transform duration-300 group-hover:translate-x-2">
        <path d="M5 12h14"></path>
        <path d="m12 5 7 7-7 7"></path>
      </svg>
    </div>
  </div>
</a>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  a {
    animation: fadeInUp 0.5s ease-out;
  }
</style>